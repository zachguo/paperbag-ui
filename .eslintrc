{
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-console": "warn",
    "no-alert": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,
    "no-var": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "comma-spacing": 2,
    "semi": [
      1,
      "always"
    ],
    "space-before-function-paren": [
      1,
      "never"
    ],
    "indent": [
      "error",
      2
    ]
  }
}